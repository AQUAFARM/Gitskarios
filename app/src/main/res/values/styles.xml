<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.NoBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/accent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryDark">@color/accentDark</item>
        <item name="colorAccent">@color/complementary</item>
        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight & colorSwitchThumbNormal. -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/gray_github_light</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="tab_repos">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/accent</item>
    </style>

    <style name="fab">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/fab_button</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_gravity">right|bottom</item>
    </style>
    <style name="fab_inv">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/fab_inv_button</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_gravity">right|bottom</item>
    </style>
    <!-- EnhancedEditText -->
    <style name="enhancedEditText" parent="android:style/Widget.EditText">
        <item name="prefixColor">@color/defaultEnchancedColor</item>
        <item name="suffixColor">@color/defaultEnchancedColor</item>
    </style>

</resources>
