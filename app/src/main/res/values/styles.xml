<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/repos_primary_dark</item>
        <item name="colorAccent">@color/repos_accent</item>
        <item name="colorControlNormal">@color/repos_accent</item>
        <item name="colorControlActivated">@color/repos_accent_dark</item>
        <item name="colorControlHighlight">@color/repos_accent_dark</item>
        <item name="gitskarios_divider">@color/repos_divider</item>
        <item name="gitskarios_primary_text">@color/repos_primary_text</item>
        <item name="gitskarios_secondary_text">@color/repos_secondary_text</item>
        <item name="gitskarios_primary_light">@color/repos_primary_light</item>
        <item name="gitskarios_icons">@color/repos_icons</item>
    </style>

    <style name="AppTheme.Normal" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/repos_primary_dark</item>
        <item name="colorAccent">@color/repos_accent</item>
        <item name="colorControlNormal">@color/repos_accent</item>
        <item name="colorControlActivated">@color/repos_accent_dark</item>
        <item name="colorControlHighlight">@color/repos_accent_dark</item>
        <item name="gitskarios_divider">@color/repos_divider</item>
        <item name="gitskarios_primary_text">@color/repos_primary_text</item>
        <item name="gitskarios_secondary_text">@color/repos_secondary_text</item>
        <item name="gitskarios_primary_light">@color/repos_primary_light</item>
        <item name="gitskarios_icons">@color/repos_icons</item>
    </style>

    <style name="AppTheme.Repos"></style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeGists" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/gist_primary</item>
        <item name="colorPrimaryDark">@color/gist_primary_dark</item>
        <item name="colorAccent">@color/gist_accent</item>
        <item name="colorControlNormal">@color/gist_accent</item>
        <item name="colorControlHighlight">@color/gist_accent_dark</item>
    </style>

    <style name="GistFileRowToolbar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorSecondary">@color/gist_accent</item>
    </style>

    <style name="fab">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/fab_button</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_gravity">right|bottom</item>
    </style>

    <style name="card_row_item_text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="user_row_item">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SpotDialog" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogSpotColor">?colorAccent</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <style name="SpotDialog.Login">
        <item name="DialogTitleText">@string/acces_token_request</item>
    </style>

    <style name="SpotDialog.LoadingUser">
        <item name="DialogTitleText">@string/loading_user</item>
    </style>

    <style name="SpotDialog.CreatingIssue">
        <item name="DialogTitleText">@string/creating_issue</item>
    </style>

    <style name="SpotDialog.CommentIssue">
        <item name="DialogTitleText">@string/comment_issue</item>
    </style>

    <style name="SpotDialog.loading_milestones">
        <item name="DialogTitleText">@string/loading_milestones</item>
    </style>

    <style name="SpotDialog.loading_adding_milestones">
        <item name="DialogTitleText">@string/adding_milestone</item>
    </style>

    <style name="SpotDialog.loading_issue">
        <item name="DialogTitleText">@string/loading_issue</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <string name="comment_issue">Adding comment</string>
    <string name="loading_milestones">Loading milestones</string>
    <string name="adding_milestone">Adding milestone</string>
    <string name="loading_issue">Loading issue</string>
</resources>
