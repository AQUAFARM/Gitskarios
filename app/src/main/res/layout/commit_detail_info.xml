<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    android:layout_margin="8dp"
    >
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/commit_message"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:padding="8dp"
        android:textSize="14sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:text="@string/commit_author"
        android:padding="8dp"
        android:textSize="14sp"
        />

    <com.alorma.github.ui.view.DrawItemSingleLineAvatar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/author"
        android:layout_marginLeft="8dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:text="@string/commit_committer"
        android:padding="8dp"
        android:textSize="14sp"
        />

    <com.alorma.github.ui.view.DrawItemSingleLineAvatar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/committer"
        android:layout_marginLeft="8dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/commit_parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:padding="8dp"
        android:textSize="14sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/commit_id"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:padding="8dp"
        android:textSize="14sp"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:text="@string/commit_status"
        android:padding="8dp"
        android:textSize="14sp"
        android:id="@+id/statusesTitle"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/statusesRecycler"
        android:layout_marginLeft="8dp"
        />

  </LinearLayout>
</android.support.v7.widget.CardView>