<android.widget.FABCenterLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alorma.github.ui.activity.IssueDetailActivity"
    android:orientation="vertical"
    app:top_id="@id/top"
    android:id="@+id/fabLayout">

    <FrameLayout
        android:id="@id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="140dp"
        android:layout_alignParentTop="true">

        <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:indeterminate="true"
            app:spb_sections_count="4"
            app:spb_color="@color/white"
            app:spb_speed="2.0"
            app:spb_stroke_width="4dp"
            app:spb_stroke_separator_length="4dp"
            app:spb_reversed="false"
            app:spb_mirror_mode="false"
            android:id="@id/smoothBar" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@id/issueDetailInfo"
            android:background="@color/accent">

        </FrameLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/discussionFeed"
        android:layout_below="@id/top"
        android:layout_alignParentBottom="true"/>

</android.widget.FABCenterLayout>
